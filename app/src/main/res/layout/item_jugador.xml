<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Foto del jugador -->
    <ImageView
        android:id="@+id/imgJugador"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:layout_marginStart="-40dp"
        android:fontFamily="@font/oswaldsemibold"
        android:text="Nombre del Jugador"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgJugador"
        app:layout_constraintTop_toTopOf="@id/imgJugador" />

    <TextView
        android:id="@+id/txtEquipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Equipo del Jugador"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/oswaldregular"
        app:layout_constraintStart_toEndOf="@id/imgJugador"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnTomarFoto"
        style="@style/Widget.Material3.Button.TextButton.Dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:width="89dp"

        android:backgroundTint="@color/blue"
        android:text="Tomar foto"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingPrefix" />

</androidx.constraintlayout.widget.ConstraintLayout>